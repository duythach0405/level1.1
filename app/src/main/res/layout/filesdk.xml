<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="31dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/carview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin30dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_centerVertical="true"
                android:id="@+id/tvfiledk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="tÃªn file" />
            <ImageView
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_centerVertical="true"
                android:id="@+id/ivfiledk"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/tvfiledk"
                android:src="@drawable/ic_tuchoi"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_toRightOf="@+id/carview"
        android:layout_width="@dimen/margin_10dp"
        android:layout_height="30dp"
        tools:ignore="NotSibling" />
</RelativeLayout>